module Page.GalvHole exposing ( Model, Msg(..), update, view, queryParser, queryBuilder )

{-| The galvanising hole page
-}

import Browser
import Browser.Dom as Dom
import Html exposing ( Html, a, br, button, div, h1, hr, input, text )
import Html.Attributes exposing ( class, href, id, readonly, step, style, tabindex, type_, value )
import Html.Events exposing ( onClick, onInput )
import Math
import SpaCmd exposing ( SpaCmd(..) )
import Task
import Url.Builder as Builder
import Url.Parser.Query as Query


queryParser : Query.Parser Model
queryParser =
    Query.map4
        (\profileTypeMaybe sizeMaybe cMaybe nMaybe ->
            let
                profileType =
                    Maybe.withDefault "" profileTypeMaybe

                size =
                    Maybe.withDefault "" sizeMaybe

                c =
                    case Maybe.withDefault "" cMaybe of
                        "true" ->
                            True

                        _ ->
                            False

                n =
                    Maybe.withDefault "4" nMaybe
            in
            case profileType of
                "RHS" ->
                    makeRhsModel n c size

                "SHS" ->
                    makeRhsModel n c size

                "CHS" ->
                    makeChsModel n c size

                _ ->
                    makeRhsModel n c size
        )
        (Query.string "profileType")
        (Query.string "size")
        (Query.string "custom")
        (Query.string "n")


queryBuilder : Model -> Array Builder.QueryParameter
queryBuilder model =
    [ Builder.string
        "profileType"
        (case model.ty of
            Chs ->
                "CHS"

            Rhs ->
                "RHS"
        )
    , Builder.string "size" model.size
    , Builder.string
        "custom"
        (if model.c then
            "true"
         else
            "false"
        )
    , Builder.string "n" model.n
    ]


makeRhsModel : String -> Bool -> String -> Model
makeRhsModel n c size =
    case String.split "*" size of
        [ x, y ] ->
            checkCustom
                { ty = Rhs
                , size = x ++ "*" ++ y
                , c = c
                , n = n
                }

        _ ->
            modelForTy n Rhs


makeChsModel : String -> Bool -> String -> Model
makeChsModel n c size =
    checkCustom
        { ty = Chs
        , size = size
        , c = c
        , n = n
        }


checkCustom : Model -> Model
checkCustom model =
    let
        library =
            case model.ty of
                Chs ->
                    chsLibrary

                Rhs ->
                    rhsLibrary

        custom =
            model.c || not (Array.member model.size library)
    in
    { model | c = custom }


type alias Model =
    { ty : ModelTy
    , size : String
    , c : Bool
    , n : String
    }


type ModelTy
    = Rhs
    | Chs


type alias Updated =
    { model : Model
    , command : SpaCmd Msg
    }


type Msg
    = UpdateTy ModelTy
    | UpdateSizeS String
    | UpdateSizeC String
    | UpdateN String
    | DoCopy String
    | NoOp


update : Msg -> Model -> Updated
update msg model =
    case msg of
        NoOp ->
            { model = model
            , command = SpaCmd.none
            }

        UpdateTy ty ->
            { model = modelForTy model.n ty
            , command = SpaCmd.none
            }

        UpdateSizeS s ->
            { model =
                { model
                    | size = s
                    , c = False
                }
            , command = SpaCmd.none
            }

        UpdateSizeC s ->
            { model =
                { model
                    | size = s
                    , c = True
                }
            , command = SpaCmd.none
            }

        UpdateN n ->
            { model = { model | n = n }
            , command = BaseCmd (Task.attempt (\_ -> NoOp) (Dom.focus "n"))
            }

        DoCopy id ->
            { model = model
            , command = CopyId id
            }


view : Model -> Browser.Document Msg
view model =
    let
        tyButton =
            case model.ty of
                Chs ->
                    makeButton (UpdateTy Rhs) "CHS"

                Rhs ->
                    makeButton (UpdateTy Chs) "RHS"

        tyInputs =
            case model.ty of
                Chs ->
                    makeChsInputs model

                Rhs ->
                    makeRhsInputs model

        tyCalc :
            Result
                String
                { diagonal : Float
                , n : Int
                }
        tyCalc =
            case String.toInt model.n of
                Just n ->
                    let
                        diagonalRes =
                            case model.ty of
                                Chs ->
                                    calculateChsDiagonal model

                                Rhs ->
                                    calculateRhsDiagonal model
                    in
                    diagonalRes
                        |> Result.map
                                (\diagonal ->
                                    { diagonal = diagonal
                                    , n = n
                                    }
                                )

                Nothing ->
                    Err "enter number of holes"
    in
    { title = "Galvanising Holes"
    , body =
        [ a
            [ class "left"
            , href "#/"
            ]
            [ text "Home"
            ]
        , div
            [ id "galv-hole"
            , class "center"
            ]
            [ h1
                []
                [ text "Galvanising Holes"
                ]
            , br [] []
            , tyButton
            , hr [] []
            , tyInputs
            , hr [] []
            , makeInput "No. of Holes" "n" 1 model.n UpdateN
            , hr [] []
            , case tyCalc of
                Err e ->
                    div
                        [ class "center"
                        ]
                        [ text e
                        ]

                Ok { diagonal, n } ->
                    let
                        -- if n == 2, then a quarter of the diagonal
                        -- otherwise, it uses the equivalent cross sectional area
                        basisHole =
                            diagonal / (4 * Math.sqrt (toFloat n / 2))

                        -- 2 dp
                        formatF : Float -> Float
                        formatF value =
                            toFloat (Math.round (value * 100)) / 100

                        dia =
                            formatF (max 10 basisHole)
                    in
                    div
                        [ class "center"
                        ]
                        [ makeOutput "Min diameter" "dia" dia
                        ]
            ]
        ]
    }



-- Circular Hollow Section


calculateChsDiagonal : Model -> Result String Float
calculateChsDiagonal model =
    case String.toFloat model.size of
        Just od ->
            Ok od

        Nothing ->
            Err "enter an outside diameter"


makeChsInputs : Model -> Html Msg
makeChsInputs model =
    let
        arraySel : Maybe (Array (Html Msg))
        arraySel =
            if model.c then
                Nothing
            else
                makeArraySelector chsLibrary model.size

        isStandard =
            Array.member model.size chsLibrary
    in
    div
        []
        (case arraySel of
            Just a ->
                a

            Nothing ->
                [ makeButton
                    (if isStandard then
                        UpdateSizeS model.size
                     else
                        UpdateSizeS "48.3"
                    )
                    "Custom"
                , makeInput "Outer Diameter" "od" 0.5 model.size UpdateSizeC
                ]
        )



-- Rectangular Hollow Section


calculateRhsDiagonal : Model -> Result String Float
calculateRhsDiagonal model =
    case getRhsVals model.size of
        { x = Just x, y = Just y } ->
            Ok (Math.sqrt (x * x + y * y))

        { x = Nothing } ->
            Err "enter a width"

        { y = Nothing } ->
            Err "enter a height"


makeRhsInputs : Model -> Html Msg
makeRhsInputs model =
    let
        { x, y } =
            getRhsStrings model.size

        arraySel : Maybe (Array (Html Msg))
        arraySel =
            if model.c then
                Nothing
            else
                makeArraySelector rhsLibrary model.size

        isStandard =
            Array.member model.size rhsLibrary
    in
    div
        []
        (case arraySel of
            Just a ->
                a

            Nothing ->
                [ makeButton
                    (if isStandard then
                        UpdateSizeS model.size
                     else
                        UpdateSizeS "75*75"
                    )
                    "Custom"
                , makeInput "Width" "x" 0.5 x (\nx -> UpdateSizeC (nx ++ "*" ++ y))
                , makeInput "Height" "y" 0.5 y (\ny -> UpdateSizeC (x ++ "*" ++ ny))
                ]
        )


getRhsStrings :
    String
    -> { x : String
       , y : String
       }
getRhsStrings size =
    case String.split "*" size of
        [ x, y ] ->
            { x = x
            , y = y
            }

        _ ->
            { x = ""
            , y = ""
            }


getRhsVals :
    String
    -> { x : Maybe Float
       , y : Maybe Float
       }
getRhsVals size =
    let
        { x, y } =
            getRhsStrings size
    in
    { x = String.toFloat x
    , y = String.toFloat y
    }



